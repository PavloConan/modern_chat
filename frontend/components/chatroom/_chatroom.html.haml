.chat
  .chat--header
    .chat--name
      %h2= chatroom.name_hashtagged
    .chat--logout
      %p= "Logged as"
      %p= current_user.name
      %p= link_to "Logout", logout_path(), method: 'destroy'
  .chat--messages
    = c("messages", chatroom: chatroom, messages: chatroom.messages)
  .chat--form
    = c("message-form", chatroom: chatroom, message: message)
